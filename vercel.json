{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/form",   "dest": "/api/form.js"   },
    { "src": "/api/doc",    "dest": "/api/doc.js"    },
    { "src": "/api/pdf",    "dest": "/api/pdf.js"    }
  ]
}
